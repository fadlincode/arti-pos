<div id="kt_header" class="header flex-column  header-fixed " >
    <div class="header-top">
        <div class=" container ">
            <div class="d-none d-lg-flex align-items-center mr-3">
                <a href="/" class="mr-20">
                    <img alt="Logo" src="/uploads/setting/{{appLogo}}" class="max-h-35px"/>
                </a>

                <div class="quick-search quick-search-inline ml-4 w-800px" id="kt_quick_search_inline">
                    <form method="get" class="quick-search-form">
                        <div class="input-group rounded bg-light">
                            <div class="input-group-prepend">
                                <span class="input-group-text">
                                    <span class="svg-icon svg-icon-lg">
                                        <i class="fas fa-search text-white"></i>
                                    </span>
                                </span>
                            </div>
                            <input type="text" class="form-control h-45px" placeholder="Cari Berita..."/>
