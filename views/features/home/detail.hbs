{{#> app}}
    {{#*inline "content"}}
        
        <div class="d-flex flex-column-fluid">
            <div class="container ">
                <div class="row">
                    {{#each data.article}}
                    <div class="col-md-8">
                        <div class="card card-custom gutter-b">
                            <div class="card-body">
                                <a class="btn btn-outline-success btn-icon" href="/" title="Refresh">
                                    <i class="fas fa-arrow-left"></i>
                                </a>
                                <div class="separator separator-solid mt-2 mb-4"></div>
                                <div class="d-flex align-items-center">
                                    <div class="symbol symbol-40 symbol-light-danger mr-5">
                                        <span class="symbol-label"></span>
                                    </div>

                                    <div class="d-flex flex-column flex-grow-1">
                                        <a href="#" class="text-dark-75 text-hover-primary mb-1 font-size-lg font-weight-bolder"><b>[{{media.name}}] - {{journalist.name}}</b></a>
                                        <span class="text-muted font-weight-bold">{{getDate}}</span>
                                    </div>
                                    
                                    <div class="dropdown dropdown-inline ml-2" data-toggle="tooltip" title="" data-placement="left" data-original-title="Quick actions">
                                        <a href="#" class="btn btn-sm btn-text-dark-50 btn-hover-icon-danger p-2">
                                            <i class="far fa-eye"></i> {{getViewCount}}
                                        </a>
                                    </div>
                                </div>
                                <div class="separator separator-solid mt-4 mb-4"></div>
                                
                                <div class="pt-4">
                                    <p class="text-dark-75 text-hover-primary font-weight-boldest font-size-h1 mb-1">
                                        {{getTitle}} 
                                    </p>

                                    <div class="bgi-no-repeat bgi-size-cover rounded min-h-500px" style="background-image: url({{getImage}})"></div>
                                    
                                    <p class="text-dark-75 font-size-lg font-weight-normal pt-5 mb-2">
                                        {{getContent}}
                                    </p>
                                </div>

                                <div class="separator separator-solid mt-4 mb-4"></div>

                                <b>Sumber : </b> <br>
                                <a href="{{getUrl}}">{{getUrl}}</a>
                                
                                <div class="separator separator-solid mt-2 mb-4"></div>
                                <b>Share ke Social Media :</b>
                                <!-- AddToAny BEGIN -->
                                <div class="a2a_kit a2a_kit_size_32 a2a_default_style">
                                    <a class="a2a_button_facebook"></a>
                                    <a class="a2a_button_whatsapp"></a>
                                    <a class="a2a_button_telegram"></a>
                                    <a class="a2a_button_x"></a>
                                </div>
                                <script async src="https://static.addtoany.com/menu/page.js"></script>
                                <!-- AddToAny END -->
                                
                            </div>
                        </div>
                    </div>
                    {{/each}}
                    
                    <div class="col-md-4">
                        {{!-- Trending --}}
                        <div class="card card-custom gutter-b">
                            <div style="height: 680px; overflow-y: auto;">
                                <div class="card-header border-0 pt-7">
                                    <div class="d-flex align-items-center">
                                        <span class="bullet bullet-bar bg-danger align-self-stretch"></span>
                                        <label class="checkbox checkbox-lg checkbox-light-success checkbox-inline flex-shrink-0 m-0 mx-4"></label>
                                        <div class="d-flex flex-column flex-grow-1">
                                            <h1 class="text-dark-75 text-hover-primary font-weight-boldest font-size-h1 mb-1">
                                                Trending
                                            </h1>
                                        </div>
                                    </div>
                                </div>
                                <div class="card-body pt-1">
                                    <div class="tab-content mt-5" id="myTabLIist18">
                                        <div class="tab-pane fade show active" id="kt_tab_pane_news_month" role="tabpanel" aria-labelledby="kt_tab_pane_news_month">
                                            <div class="form">
                                                {{#each data.trendings}}
                                                <div class="d-flex align-items-top pb-9">
                                                    <div class="symbol symbol-60 symbol-2by3 flex-shrink-0 mr-4">
                                                        <div class="symbol-label" style="background-image: url('{{getImage}}')"></div>
                                                    </div>
                                                    <div class="d-flex flex-column flex-grow-1">
                                                        <a href="/read/{{getSlug}}" class="text-dark-50 font-weight-bold font-size-lg text-hover-primary mb-1">
                                                            {{getTitle}}
                                                        </a>
                                                        <p class="mt-2 text-dark-75 font-size-sm">
                                                            <i class="far fa-user-circle text-warning"></i> <b>[{{media.name}}]</b> - {{journalist.name}}
                                                        </p>
                                                        <div class="align-items-center">
                                                            <a href="#" class="btn btn-sm btn-text-dark-50 btn-hover-icon-danger p-2">
                                                                <i class="far fa-heart "></i>
                                                            </a>
                                                            <a href="#" class="btn btn-hover-text-primary btn-hover-icon-primary p-2">
                                                                <i class="fas fa-share-alt"></i>
                                                            </a>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="separator separator-solid mb-4"></div>
                                                {{/each}}

                                                <div class="d-flex align-items-top pb-9">
                                                    <a href="/page/trendings" class="btn btn-primary btn-block"> Lainnya</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
    {{/inline}}
{{/app}}