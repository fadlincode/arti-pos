<div class="row mt-0 mt-lg-3">
    <div class="col-md-8">
        <div class="row">
            <div class="col-md-12">
                {{> features/home/components/rectangle_horizontal_image 
                    news=data.articles.trendings.items.[0]
                }}
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                {{> features/home/components/square_image 
                    news=data.articles.trendings.items.[1]
                }}
            </div>
            <div class="col-md-6">
                {{> features/home/components/square_image 
                    news=data.articles.trendings.items.[2]
                }}
            </div>
        </div>
    </div>
    <div class="col-md-4">
        {{> features/home/components/card_list 
            news=data.articles.trendings.items
            cardTitle="Trending" 
            cardLink="/page/trending"
            cardHeight="330px"
        }}
    </div>
</div>
