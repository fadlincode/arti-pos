        <div class="row">
            <div class="col-md-12">
                <div class="card card-custom bgi-no-repeat bgi-no-repeat bgi-size-cover gutter-b" style="height: 330px; background-image: linear-gradient(to bottom, rgba(245, 246, 252, 0.52), rgba(0, 0, 0, 0.73)), url({{data.articles.trendings.[0].image}})">
                    <div class="card-body d-flex flex-column ">
                        <div class="card-body d-flex">
                            <div class="d-flex py-20 flex-column align-items-start flex-grow-1">
                                <div class="flex-grow-1">
                                    <a href="/read/{{data.articles.trendings.[0].slug}}" class="text-white font-weight-bolder font-size-h4">
                                        {{data.articles.trendings.[0].title_original}}
                                    </a>
                                    <p class="text-white mt-2">
                                        <i class="far fa-user-circle text-warning"></i> [{{data.articles.trendings.[0].media.name}}] - {{data.articles.trendings.[0].journalist.name}}
