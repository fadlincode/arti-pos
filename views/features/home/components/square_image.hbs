<div class="card card-custom bgi-no-repeat bgi-no-repeat bgi-size-cover gutter-b" style="height: 330px; background-image: linear-gradient(to bottom, rgba(245, 246, 252, 0.52), rgba(0, 0, 0, 0.73)), url({{news.image}})">
    <div class="card-body d-flex flex-column ">
        <div class="card-body d-flex">
            <div class="d-flex py-20 flex-column align-items-start flex-grow-1">
                <div class="flex-grow-1">
                    <a href="/read/{{news.slug}}" class="text-white font-weight-bolder font-size-h4">
                        {{news.title_original}}
                    </a>
                    <p class="text-white mt-2">
                        <i class="far fa-user-circle text-warning"></i> [{{news.media.name}}] - {{news.journalist.name}}
                    </p>
                </div>
                <div class="align-items-center">
                    <a href="#" class="btn btn-sm btn-text-dark-50 btn-hover-icon-danger p-2 updateLikeBtn" data-id="{{news.id}}">
                        <i class="far fa-heart iconClass">
                            {{#if news.like_count}}
                            <span class="label label-sm label-danger likeCount" data-id="{{news.id}}">{{news.like_count}}</span>
                            {{/if}}
                        </i>
                    </a>
                    <a href="#" class="btn btn-hover-text-primary btn-hover-icon-primary p-2">
                        <i class="far fa-eye iconClass">
                            {{#if news.view_count}}
                            <span class="label label-sm label-warning">{{news.view_count}}</span>
                            {{/if}}
                        </i>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>