<div class="card card-custom gutter-b">
    <div class="card-header border-0 pt-7">
        <div class="d-flex align-items-center">
            <span class="bullet bullet-bar bg-danger align-self-stretch"></span>
            <label class="checkbox checkbox-lg checkbox-light-success checkbox-inline flex-shrink-0 m-0 mx-4"></label>
            <div class="d-flex flex-column flex-grow-1">
                <h1 class="text-dark-75 text-hover-primary font-weight-boldest font-size-h1 mb-1">
                    {{cardTitle}}
                </h1>
            </div>
            
        </div>
    </div>
    <div class="card-body pt-1">
        <div class="tab-content mt-5" id="myTabLIist18">
            <div class="tab-pane fade show active" id="kt_tab_pane_news_month" role="tabpanel" aria-labelledby="kt_tab_pane_news_month">
                <div class="form">
                    {{#each news}}
                    <div class="d-flex align-items-top pb-9">
                        <div class="symbol symbol-60 symbol-2by3 flex-shrink-0 mr-4">
                            <div class="symbol-label" style="background-image: url('{{article.image}}')"></div>
                        </div>
                        <div class="d-flex flex-column flex-grow-1">
                            <a href="/read/{{slug}}" class="text-dark-50 font-weight-bold font-size-lg text-hover-primary mb-1">
                                {{article.title_original}}
                            </a>
                            <p class="mt-2 text-dark-75 font-size-sm">
                                <i class="far fa-user-circle text-warning"></i> <b>[{{article.media.name}}]</b> - {{article.journalist.name}}
                            </p>
                            <div class="align-items-center">
                                <a href="#" class="btn btn-sm btn-text-dark-50 btn-hover-icon-danger p-2 updateLikeBtn" data-id="{{article.id}}">
                                    <i class="far fa-heart iconClass">
                                        {{#if article.like_count}}
                                        <span class="label label-sm label-danger likeCount" data-id="{{article.id}}">{{article.like_count}}</span>
                                        {{/if}}
                                    </i>
                                </a>
                                <a href="#" class="btn btn-hover-text-primary btn-hover-icon-primary p-2">
                                    <i class="far fa-eye iconClass">
                                        {{#if article.view_count}}
                                        <span class="label label-sm label-warning">{{article.view_count}}</span>
                                        {{/if}}
                                    </i>
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="separator separator-solid mb-4"></div>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
    <div class="card-footer">
        {{#with data.articles}}
        <div class="d-flex flex-column flex-md-row align-items-center justify-content-between">
            <div class="">
                    <b>Showing : </b>
                {{showingPagination meta.currentPage meta.itemsPerPage meta.itemCount meta.totalItems}}
                Data
            </div>
            <div class="">
                <div class="btn-group" role="group" aria-label="Button group with nested dropdown">
                    <a href="{{links.previous}}" type="button" class="btn {{ternary links.previous "btn-outline-secondary" "btn-secondary"}} btn-secondary font-weight-bold">previous</a>
                    <a href="{{links.next}}" type="button" class="btn {{ternary links.next "btn-outline-secondary" "btn-secondary"}} font-weight-bold">next</a>
                </div>
            </div>
        </div>
        {{/with}}
    </div>
</div>