{{#> admin}}
    {{#*inline "content"}}

        <div class="d-flex flex-column-fluid">
            <div class=" container ">
                <div class="card card-custom card-stretch gutter-b">
                    <div class="card-header flex-wrap py-3 justify-content-between">
                        <div class="card-title">
                            {{ data.title }}
                        </div>
                        <div class="card-toolbar">
                            <ul class="nav nav-pills nav-pills-sm nav-dark-75">
                                <li class="nav-item d-flex align-items-center">
                                    <button class="btn btn-success " data-toggle="modal" title="Tambah" data-target="#addModal">
                                        Tambah
                                    </button>
                                </li>
                                <li class="nav-item d-flex align-items-center">
                                    <a class="btn btn-outline-success btn-icon" href="/admin/journalists" title="Refresh">
                                        <i class="fas fa-undo"></i>
                                    </a>
                                </li>
                                <li class="nav-item d-flex align-items-center">
                                    <form action="/admin/journalists" method="GET">
                                        <div class="input-group">
                                            <input type="text" class="form-control" name="searchTerm" placeholder="Search for..." />
                                        </div>
                                    </form>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered table-checkable font-size-sm" id="kt_datatable">
                                <thead class="thead-light">
                                    <tr>
                                        <th style="width: 5%">No</th>
                                        <th style="width: 200px">Aksi</th>
                                        <th style="width: 100px">Foto</th>
                                        <th style="width: auto">Nama</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {{#each data.journalists}}
                                    <tr>
                                        <td>{{eval @index " + 1" }}</td>
                                        <td>
                                            <a href="/admin/journalists/{{ getId }}" class="label label-inline label-warning">
                                                edit
                                            </a>
                                            <a href="#" class="label label-inline label-danger" data-toggle="modal" title="Tambah" data-target="#deleteModal{{ getId }}">
                                                hapus
                                            </a>
                                        </td>
                                        <td>
                                            {{#if getPhoto }}
                                            <div class="symbol symbol-40 symbol-sm flex-shrink-0">
                                                <img alt="Pic" src="/uploads/journalist/{{ getPhoto }}" width="30px" height="30px">
                                            </div>
                                            {{else}}
                                            <div class="symbol symbol-40 symbol-sm flex-shrink-0">
                                                <span class="symbol-label font-size-h4 font-weight-bold"></span>
                                            </div>
                                            {{/if}}
                                        </td>
                                        <td>{{ getName }}</td>
                                    </tr>
                                    <div class="modal fade" id="deleteModal{{ getId }}" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
                                        <div class="modal-dialog modal-xs">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title" id="deleteModalLabel">Hapus</h5>
                                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                    <span aria-hidden="true">&times;</span>
                                                    </button>
                                                </div>
                                                <div class="modal-body">
                                                    <form action="/admin/journalists/{{ getId }}" method="POST">
                                                        <div class="form-group">
                                                            Apakah anda yakin akan menghapus data ini ?
                                                            <br>
                                                            Data : <b class="text-danger">{{ getName }}</b>
                                                        </div>
                                                        <div class="modal-footer">
                                                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                                            <button type="submit" class="btn btn-danger">Hapus</button>
                                                        </div>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    {{/each}}   
                                </tbody>
                            </table>
                        </div>

                        <!-- Modal Add -->
                        <div class="modal fade" id="addModal" tabindex="-1" aria-labelledby="addModalLabel" aria-hidden="true">
                            <div class="modal-dialog modal-md">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="addModalLabel">Tambah</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        <form action="/admin/journalists/store" method="POST" enctype="multipart/form-data">                     
                                            <div class="form-group">
                                                <label for="name">Nama <span class="text-danger">*</span></label>
                                                <input class="form-control form-control-lg" name="name" id="name" type="text" placeholder="Nama" required/>
                                            </div>
                                            <div class="form-group">
                                                <label for="photo">Foto </label>
                                                <input class="form-control form-control-lg" name="photo" id="photo" type="file" placeholder="Logo"/>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                                <button type="submit" class="btn btn-success">Simpan</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    {{/inline}}
{{/admin}}